<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.bartek.groupchat.user.app.controllers.chatController">
   <children>
      <VBox layoutX="50.0" prefHeight="600.0" prefWidth="700.0">
         <children>
            <Label alignment="CENTER" prefHeight="50.0" prefWidth="700.0" text="Group chat">
               <font>
                  <Font size="24.0" />
               </font>
            </Label>
            <TextArea fx:id="messagesArea" editable="false" prefHeight="500.0" prefWidth="700.0" />
            <TextField fx:id="messageEntry" onAction="#sendMessage" prefWidth="700.0" promptText="Send message" />
         </children>
      </VBox>
   </children>
</AnchorPane>
